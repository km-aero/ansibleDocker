- hosts: localhost
  connection: localhost
  gather_facts: False

  tasks:
    - name: create an instance
      ec2:
         key_name: my_key
         instance_type: t2.micro
         image: ami-0eb89db7593b5d434
         region: eu-west-2
         wait: true
      register: ec2

    - name: Add public IP to host group
      add_host:
        name: "{{ ec2.public_ip }}"
        groups: ec2hosts

    - name: Wait for SSH to come up
      wait_for:
        host: "{{ ec2.public_ip }}"
        port: 22
        state: started
